<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Row 1: Medicine Name -->
    <EditText
        android:id="@+id/medicineInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Medicine Name"
        android:inputType="textPersonName"
        android:layout_marginBottom="8dp"/>

    <!-- Row 2: Dosage | Unit | Type -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/dosageAmountInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Dosage"
            android:inputType="numberDecimal"/>

        <Spinner
            android:id="@+id/dosageUnitSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"/>

        <Spinner
            android:id="@+id/medicineTypeSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Row 3A: Frequency | Time Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <Spinner
            android:id="@+id/frequencySpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/timeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Select Time"/>
    </LinearLayout>

    <!-- Row 3B: Selected Times (full width, below) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:id="@+id/timesContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
    </HorizontalScrollView>


    <!-- Days of week (optional, scrollable) -->
    <!-- Days of week (optional, scrollable) -->
    <HorizontalScrollView
        android:id="@+id/daysOfWeekScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/daysOfWeekLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkMon"
                android:text="Mon" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

            <CheckBox
                android:id="@+id/checkTue"
                android:text="Tue" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

            <CheckBox
                android:id="@+id/checkWed"
                android:text="Wed" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

            <CheckBox
                android:id="@+id/checkThu"
                android:text="Thu" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

            <CheckBox
                android:id="@+id/checkFri"
                android:text="Fri" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

            <CheckBox
                android:id="@+id/checkSat"
                android:text="Sat" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

            <CheckBox
                android:id="@+id/checkSun"
                android:text="Sun" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
        </LinearLayout>
    </HorizontalScrollView>


    <!-- Add / Update Button -->
    <Button
        android:id="@+id/addMedicineButton"
        android:text="Add Medicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>

    <!-- List label -->
    <TextView
        android:id="@+id/medicineListLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="@string/medicationFragmentInstructions"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/medicineRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"/>

</LinearLayout>